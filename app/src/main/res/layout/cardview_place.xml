<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardItemRecycler"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/linearCardItem"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/recurso_wp_iglesia_valladolid"/>

        <LinearLayout
            android:id="@+id/subLinearCardItem"
            android:orientation="vertical"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tvNombreLugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iglesia_valladolid"
                android:textSize="@dimen/tamaño_letra_lugar"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvCiudad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ciudad_valladolid"
                android:textSize="@dimen/tamaño_letra_lugar"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/tvDescripcionLugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margen_arriba_descripcion"
                android:text="@string/descripcion_iglesia_valladolid"
                android:textSize="@dimen/tamaño_letra_descripcion"
                android:textStyle="normal"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>